<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark"
android:id="@+id/RelativeLayout"
    tools:context="com.apprightstudio.android.simplecalculator.MainActivity">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:background="#E3F2FD"
        android:gravity="bottom|right"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/answer_display"
        android:background="#E3F2FD"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/display"
        android:gravity="bottom|right"

        android:textSize="34sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/answer_display"
        android:background="#F50057"
        android:onClick="onClear"
        android:text="@string/Delete"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/answer_display"
        android:background="#FF1744"

        android:onClick="onClickNumber"
        android:text="@string/Seven"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/button2"
        android:layout_toEndOf="@+id/button2"

        android:background="#FF1744"
        android:onClick="onClickNumber"
        android:text="@string/Eight"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/button3"
        android:layout_toEndOf="@+id/button3"

        android:background="#FF1744"
        android:onClick="onClickNumber"
        android:text="@string/Nine"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button2"

        android:background="#FF1744"
        android:onClick="onClickNumber"
        android:text="@string/Four"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button5"

        android:background="#FF1744"
        android:onClick="onClickNumber"
        android:text="@string/One"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button6"

        android:background="#FF1744"
        android:onClick="onClickNumber"
        android:text="@string/point"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_below="@+id/button2"
        android:layout_toEndOf="@+id/button2"

        android:background="#FF1744"
        android:onClick="onClickNumber"
        android:text="@string/Five"
        android:textSize="30sp" />

    <Button
        android:id="@+id/number_2"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_below="@+id/button8"
        android:layout_toEndOf="@+id/button6"

        android:background="#FF1744"
        android:onClick="onClickNumber"
        android:text="@string/Two"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_below="@+id/number_2"
        android:layout_toEndOf="@+id/button7"

        android:background="#FF1744"
        android:onClick="onClickNumber"
        android:text="@string/zero"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button11"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_below="@+id/number_3"
        android:layout_toEndOf="@+id/button10"

        android:background="#FF1744"
        android:onClick="onEquals"
        android:text="@string/Equals"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button12"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/button4"
        android:layout_below="@+id/button4"

        android:background="#FF1744"
        android:onClick="onClickNumber"
        android:text="@string/Six"
        android:textSize="30sp" />

    <Button
        android:id="@+id/number_3"
        android:layout_width="90dp"
        android:layout_height="75dp"

        android:layout_below="@+id/button12"
        android:layout_toEndOf="@+id/number_2"
        android:background="#FF1744"
        android:onClick="onClickNumber"
        android:text="@string/Three"
        android:textSize="30sp" />

    <Button
        android:id="@+id/divider"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/button"

        android:background="#F50057"
        android:onClick="onOperator"
        android:text="@string/Divide"
        android:textSize="30sp" />

    <Button
        android:id="@+id/multiplier"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"

        android:layout_below="@+id/divider"

        android:background="#F50057"
        android:onClick="onOperator"
        android:text="@string/Multiply"
        android:textSize="30sp" />

    <Button
        android:id="@+id/subtracter"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/multiplier"

        android:background="#F50057"
        android:onClick="onOperator"
        android:text="@string/subtract"
        android:textSize="30sp" />

    <Button
        android:id="@+id/adder"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_below="@+id/subtracter"
        android:layout_toEndOf="@+id/button11"

        android:background="#F50057"
        android:onClick="onOperator"
        android:text="@string/add"
        android:textSize="30sp" />


</RelativeLayout>
